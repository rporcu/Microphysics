airreactor.radius0 = 0.064     # reactor radius
airreactor.height0 = 0.128     # reactor height

airreactor.c2c     = 0.128     # cylinder-to-cylinder height

airreactor.radius1 = 0.016     # riser radius
airreactor.height1 = 1.024     # total riser height

airreactor.outlet  = 0.768     # outlet height from bottom

airreactor.offset  = 0.064     #  y/z offset to center in domain

#! BCs
#!-----------------------------------------------------------//
#xlo.location = 0.0    # Not needed -- flush with domain extent
