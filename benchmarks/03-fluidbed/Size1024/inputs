amr.stop_time = 0.01

# Number of grid cells in each direction at the coarsest level
amr.n_cell = 128 50 128

# Maximum allowable size of each subdomain in the problem domain;
#    this is used to decompose the domain for parallel calculations.
amr.max_grid_size_x = 4
amr.max_grid_size_y = 50
amr.max_grid_size_z = 4

amr.blocking_factor = 2

# Maximum tile size within each grid
fabarray.mfiter_tile_size = 1024 1024 1024

# Maximum particle title size
particles.tile_size = 1024 1024 1024

# Maximum level in hierarchy (for now must be 0, i.e., one level in total)
amr.max_level = 0

amr.plot_int  =   -1
amr.check_int  = 100

# Geometry
geometry.coord_sys   = 0                  # 0: Cartesian   
geometry.is_periodic = 1        0     1      # Is periodic in each direction?
geometry.prob_lo     = 0.       0.    0.       # lo corner of physical domain
geometry.prob_hi     = 0.0256   0.01  0.0256   # hi corner of physical domain
