#_______________________________________________________________________
# Solids properties
#
solids.types = solid0


#_______________________________________________________________________
# DEM model settings
#
dem.solve = solid0

dem.friction_coeff.pp     =     0.217
dem.friction_coeff.pw     =     0.217

dem.spring_const.pp       =  5099.0
dem.spring_const.pw       =  5099.0

