#_______________________________________________________________________
# Solver settings

amrex.fpe_trap_invalid = 1

#! Fluid solver
#!-----------------------------------------------------------//

mfix.steady_state     = 1
mfix.steady_state_tol = 1.0e-5
mfix.steady_state_maxiter = 500

mfix.gravity =  0.0   0.0   0.0

amr.blocking_factor = 4

nodal_proj.mg_rtol = 1.e-13
mac_proj.mg_rtol = 1.e-13
diffusion.rtol = 1.e-13

#_______________________________________________________________________
# Geometry / grids / tiles

# Maximum level in hierarchy (for now must be 0, i.e., one level in total)
amr.max_level = 0

geometry.coord_sys   = 0                    # 0: Cartesian
geometry.is_periodic = 0      0      0      # Is periodic in each direction?
geometry.prob_lo     = 0.     0.     0.     # lo corner of physical domain
geometry.prob_hi     = 0.02   0.02   0.10   # hi corner of physical domain

# Number of grid cells in each direction at the coarsest level
amr.n_cell = 16  16  80


#! Grids
#!-----------------------------------------------------------//
# Maximum allowable size of each fluid subdomain in the problem domain;

# Fluid
amr.max_grid_size_x =  1024
amr.max_grid_size_y =  1024
amr.max_grid_size_z =  1024

#! Tiles
#!-----------------------------------------------------------//

# Fluid: Maximum tile size within each grid
fabarray.mfiter_tile_size = 8  8  8


#_______________________________________________________________________
# IO / Checkpointing

amr.par_ascii_int  = -1
amr.par_ascii_file ="vis"

amr.plot_int=1
amr.plot_file=FLD02

amr.check_int      = -1
amr.check_file     ="chk"

#! Restart from checkpoint
#!-----------------------------------------------------------//
#amr.restart   ="restart-file"

amr.plt_vel_g = 1
amr.plt_p_g = 1


#_______________________________________________________________________
# Fluid model settings
#
fluid.solve = fluid

fluid.viscosity          = constant
fluid.viscosity.constant = 1.0e-3

#_______________________________________________________________________
# DEM model settings

dem.solve = None


#_______________________________________________________________________
# Regions for defining ICs and BCs
#

mfix.regions = full-domain  inflow  outflow  wall1  wall2  wall3  wall4

regions.full-domain.lo = 0.000  0.000  0.000
regions.full-domain.hi = 0.020  0.020  0.100

regions.inflow.lo      = 0.000  0.000  0.000
regions.inflow.hi      = 0.020  0.020  0.000

regions.outflow.lo     = 0.000  0.000  0.100
regions.outflow.hi     = 0.020  0.020  0.100

regions.wall1.lo       = 0.005  0.000  0.000
regions.wall1.hi       = 0.005  0.020  0.100

regions.wall2.lo       = 0.015  0.000  0.000
regions.wall2.hi       = 0.015  0.020  0.100

regions.wall3.lo       = 0.000  0.005  0.000
regions.wall3.hi       = 0.020  0.005  0.100

regions.wall4.lo       = 0.000  0.015  0.000
regions.wall4.hi       = 0.020  0.015  0.100


#_______________________________________________________________________
# Initial Conditions
#

ic.regions = full-domain


# Background IC covering the full domain with gas.
#---------------------------------------------------------------------//
ic.full-domain.fluid.volfrac   =  1.0
ic.full-domain.fluid.density   =  1.0
ic.full-domain.fluid.pressure  = 101.325e+3
ic.full-domain.fluid.velocity  = 0.0  0.0  10.0


#_______________________________________________________________________
# Boundary Conditions
#

bc.regions = inflow  outflow  wall1  wall2  wall3  wall4

bc.inflow = mi
bc.inflow.fluid.volfrac  = 1.0
bc.inflow.fluid.velocity = 0.0  0.0  10.0
bc.inflow.fluid.density  = 1.0

bc.outflow = po
bc.outflow.fluid.pressure = 101325.0

bc.wall1 = nsw
bc.wall1.normal =  1.0  0.0  0.0

bc.wall2 = nsw
bc.wall2.normal = -1.0  0.0  0.0

bc.wall3 = nsw
bc.wall3.normal =  0.0  1.0  0.0

bc.wall4 = nsw
bc.wall4.normal =  0.0 -1.0  0.0

mfix.stop_for_unused_inputs = true
