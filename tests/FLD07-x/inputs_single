
amrex.fpe_trap_invalid = 1

#######################################################################
#                           Solver settings                           #
#######################################################################

#! Fluid solver
#!-----------------------------------------------------------//

mfix.steady_state     = 1
mfix.steady_state_tol = 1.0e-5
mfix.steady_state_maxiter =500

amr.blocking_factor = 8


#######################################################################
#                       Geometry / Grids / Tiles                      #
#######################################################################

# Maximum level in hierarchy (for now must be 0, i.e., one level in total)
amr.max_level = 0

geometry.coord_sys   = 0                    # 0: Cartesian
geometry.is_periodic = 0      0      1      # Is periodic in each direction?
geometry.prob_lo     = 0.     0.     0.     # lo corner of physical domain
geometry.prob_hi     = 3.2    3.2    0.8    # hi corner of physical domain

# Number of grid cells in each direction at the coarsest level
amr.n_cell =  32  32   8

#! Grids
#!-----------------------------------------------------------//
# Maximum allowable size of each fluid subdomain in the problem domain;

# Fluid
amr.max_grid_size_x =  1024
amr.max_grid_size_y =  1024
amr.max_grid_size_z =  1024


#! Tiles
#!-----------------------------------------------------------//

# Fluid: Maximum tile size within each grid
fabarray.mfiter_tile_size = 1024 1024 1024


#######################################################################
#                       Particle load balancing                       #
#######################################################################



#######################################################################
#                          IO / Checkpointing                         #
#######################################################################

amr.par_ascii_int  = -1
amr.par_ascii_file ="vis"

amr.plot_int=1
amr.plot_file=FLD07

amr.check_int      = -1
amr.check_file     ="chk"

mfix.write_eb_surface = false

#amr.plt_regtest = 1


#######################################################################
#                       Physical model settings                       #
#######################################################################

mfix.gravity =  0.0  0.0   0.0



# Fluid model settings
#----------------------------------------------------------------------
fluid.solve = fluid

fluid.density            = constant
fluid.density.constant   = 1.0

fluid.viscosity          = constant
fluid.viscosity.constant = 1.0e-3

fluid.specific_heat          = constant
fluid.specific_heat.constant = 1.0

fluid.thermal_conductivity          = constant
fluid.thermal_conductivity.constant = 0.0


# DEM model settings
#----------------------------------------------------------------------
dem.solve = None


# EB geometry
#----------------------------------------------------------------------
mfix.geometry = "box"

box.internal_flow = false

box.Lo = 1.2  1.2 -1.0
box.Hi = 2.0  2.0  1.0


#_______________________________________________________________________
# Regions for defining ICs and BCs
#

mfix.regions = full-domain  wall1  wall2  inlet  outlet

regions.full-domain.lo = 0.000  0.000  0.000
regions.full-domain.hi = 3.200  3.200  0.800

regions.wall1.lo       = 0.000  0.000  0.000
regions.wall1.hi       = 3.200  0.000  0.800

regions.wall2.lo       = 0.000  3.200  0.000
regions.wall2.hi       = 3.200  3.200  0.800

regions.inlet.lo       = 0.000  0.000  0.000
regions.inlet.hi       = 0.000  3.200  0.800

regions.outlet.lo      = 3.200  0.000  0.000
regions.outlet.hi      = 3.200  3.200  0.800


# Initial Conditions
#----------------------------------------------------------------------
ic.regions = full-domain

ic.full-domain.fluid.volfrac   = 1.0
ic.full-domain.fluid.pressure  = 0.0
ic.full-domain.fluid.velocity  = 0.1  0.0  0.0


# Boundary Conditions
#----------------------------------------------------------------------
bc.regions = wall1  wall2  inlet  outlet

bc.wall1 = nsw
bc.wall1.normal = 0.0  1.0  0.0

bc.wall2 = nsw
bc.wall2.normal = 0.0 -1.0  0.0

bc.inlet = mi
