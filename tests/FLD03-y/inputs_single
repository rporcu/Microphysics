#_______________________________________________________________________
# Solver settings

amrex.fpe_trap_invalid = 1

mfix.steady_state     = 1
mfix.steady_state_tol = 1.0e-10

mfix.gravity =  0.0   0.0   0.0

#! Fluid solver
#!-----------------------------------------------------------//

amr.blocking_factor = 4

# Maximum level in hierarchy (for now must be 0, i.e., one level in total)
amr.max_level = 0

# Geometry
geometry.coord_sys   = 0                 # 0: Cartesian
geometry.is_periodic = 1      0     0    # Is periodic in each direction?
geometry.prob_lo     = 0.     0.    0.   # lo corner of physical domain
geometry.prob_hi     = 0.005  0.01  0.01 # hi corner of physical domain

# Number of grid cells in each direction at the coarsest level
amr.n_cell = 4 8 8


#! Grids
#!-----------------------------------------------------------//
# Maximum allowable size of each fluid subdomain in the problem domain;

# Fluid
amr.max_grid_size_x =  1024
amr.max_grid_size_y =  1024
amr.max_grid_size_z =  1024

#! Tiles
#!-----------------------------------------------------------//

# Fluid: Maximum tile size within each grid
fabarray.mfiter_tile_size = 4 4 4


#_______________________________________________________________________
# IO / Checkpointing

amr.plot_int  = 1
amr.plot_file = FLD03

amr.check_int = -1
amr.par_ascii_int = -1

amr.plt_vel_g = 1
amr.plt_p_g = 1


#_______________________________________________________________________
# Fluid model settings
#
fluid.solve = fluid

fluid.density            = constant
fluid.density.constant   = 1.0

fluid.viscosity          = constant
fluid.viscosity.constant = 1.0e-3

#_______________________________________________________________________
# DEM model settings

dem.solve = None


#_______________________________________________________________________
# Regions for defining ICs and BCs
#

mfix.regions = full-domain  inflow  outflow  wall1  wall2

regions.full-domain.lo = 0.000  0.000  0.000
regions.full-domain.hi = 0.005  0.010  0.010

regions.inflow.lo      = 0.000  0.000  0.000
regions.inflow.hi      = 0.005  0.000  0.010

regions.outflow.lo     = 0.000  0.010  0.000
regions.outflow.hi     = 0.005  0.010  0.010

regions.wall1.lo       = 0.000  0.000  1.25e-6
regions.wall1.hi       = 0.005  0.010  1.25e-6

regions.wall2.lo       = 0.000  0.000  9.99875e-3
regions.wall2.hi       = 0.005  0.010  9.99875e-3


#_______________________________________________________________________
# Initial Conditions
#

ic.regions = full-domain


# Background IC covering the full domain with gas.
#---------------------------------------------------------------------//
ic.full-domain.fluid.volfrac   =  1.0

ic.full-domain.fluid.velocity  = 0.0  12.5  0.0


#_______________________________________________________________________
# Boundary Conditions
#

bc.regions = inflow  outflow  wall1  wall2

bc.inflow = pi
bc.inflow.fluid.pressure  = 12.0

bc.outflow = po
bc.outflow.fluid.pressure =  0.0

bc.wall1 = nsw
bc.wall1.normal = 0.0  0.0  1.0

bc.wall2 = nsw
bc.wall2.normal = 0.0  0.0 -1.0

mfix.stop_for_unused_inputs = true
